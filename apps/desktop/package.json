{
  "name": "desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:web",
    "build:web": "tsc && vite build",
    "build:linux": "NO_STRIP=1 pnpm tauri build --bundles deb,rpm,appimage",
    "build:win64": "tauri build --runner cargo-xwin --target x86_64-pc-windows-msvc",
    "build:win32": "tauri build --target i686-pc-windows-msvc",
    "build:macos": "tauri build --target universal-apple-darwin",
    "build:docker:desktop": "cross-env DOCKER_BUILDKIT=1 pnpm -w exec docker build -f apps/desktop/dockerfile.desktop --target output --output type=local,dest=./apps/desktop/dist-tauri .",
    "preview": "vite preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-router": "^1.133.27",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@tanstack/react-router-devtools": "^1.133.27",
    "@tanstack/router-plugin": "^1.133.27",
    "@tauri-apps/cli": "^2",
    "@types/node": "^22.17",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^10.1.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.12"
  }
}